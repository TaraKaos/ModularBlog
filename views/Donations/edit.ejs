<%- include('../partials/header') %>

<div class="container-fluid-content container-content">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit <%= donation.title %> Donation Link</h1>
			<form action="/donations/<%= donation._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="donation[title]" value="<%= donation.title %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="donation[URL]" value="<%= donation.URL %>">	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>	
				</div>
			</form>
			<a href="/admin/donationLinks">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>