<!DOCTYPE html>
<html>
    <head>
        <title><%= settings.siteTitle %></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Ruthie&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Just+Another+Hand&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <!-- Header Image -->
        <div class="container-fluid container-header overflow-hidden">
            <div class="row">
                <div class="col-sm-3">
                    <% if (settings.headerLeftImageURL != ""){ %>
                        <img src="<%= settings.headerLeftImageURL %>" class="float-left header-image" alt="">
                    <% } %>
                </div>
                <div class="col-sm-6 header-center">
                    <p>
                        <% settings.headerTitle.split(" ").forEach(function(word){ %>
                            <span class="big-letter"><%= word[0] %></span><%= word.substring(1) %>
                        <% }); %>
                    </p>
                </div>
                <div class="col-sm-3">
                    <% if (settings.headerRightImageURL != ""){ %>
                        <img src="<%= settings.headerRightImageURL %>" class="float-right header-image" alt="">
                    <% } %>
                </div>
            </div>
        </div>

        <!-- NavBar -->
        <ul class="nav nav-pills nav-fill navbar-main">
            <li class="nav-item">
                <a class="nav-link" href="/"><%= settings.navbarHomeButtonTitle %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/posts"><%= settings.navbarPostButtonTitle %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/links"><%= settings.navbarLinksButtonTitle %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/donate"><%= settings.navbarDonateButtonTitle %></a>
            </li>
            <% if (settings.navbarTwitterURL != ""){ %>
                <li class="nav-item">
                    <a href="<%= settings.navbarTwitterURL %>" class="nav-link" target="_blank">Twitter</a>
                </li>
            <% } %>
            <% if (currentUser){ %>
                <li class="nav-item">
                    <a class="nav-link" href="/admin"><%= settings.navbarAdminButtonTitle %></a>
                </li>
            <% } %>
        </ul>