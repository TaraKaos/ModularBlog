<%- include('partials/header') %>

<div class="container-fluid container-content">
    <div class="row">
        <div class="col-sm-3 home-content-left">
            <% if(settings.homeLeftImageURL != ""){ %>
                <img src="<%= settings.homeLeftImageURL %>" class="home-image" alt="">
            <% } %>
        </div>
        <div class="col-sm-6 home-content-center">
            <p>
                <%= settings.homeAboutMe %>
                <% if(settings.homeAboutMeSignature != ""){ %>
                    <strong><%= settings.homeAboutMeSignature %></strong>
                <% } %>
            </p>
        </div>
        <div class="col-sm-3 home-content-right">
            <% if(settings.homeRightImageURL != ""){ %>
                <img src="<%= settings.homeRightImageURL %>" class="home-image" alt="">
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>