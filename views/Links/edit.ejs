<%- include('../partials/header') %>

<div class="container-fluid-content container-content">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit <%= link.title %> Link</h1>
			<form action="/links/<%= link._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="link[title]" value="<%= link.title %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="link[URL]" value="<%= link.URL %>">	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>	
				</div>
			</form>
			<a href="/admin/posts">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>