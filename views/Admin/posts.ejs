<%- include('../partials/header') %>

<div class="container-fluid container-content">
    <h1>Posts Administration</h1>
    
    <div class="container-fluid posts-container">
        <% posts.forEach(function(post){ %>
            <div class="row">
                <p class="admin-post-title"><%= post.title %></p>
                <a class="admin-post-link" href="/posts/<%= post._id %>"><p>View</p></a>
                <a class="admin-post-link" href="/posts/<%= post._id %>/Edit"><p>Edit</p></a>
                <a class="admin-post-link" href="/posts/<%= post._id %>/Delete"><p>Delete</p></a>
            </div>
        <% }); %>
    </div>

    <a class="admin-post-link" href="/admin/newPost"><p>Create New Post</p></a>
</div>

<%- include('../partials/footer') %>