<%- include('../partials/header') %>

<div class="container-fluid-content container-content">
    <form action="/admin/settings" method="POST">
        <h3>General Settings</h3>
        <hr>
        <label for="siteTitle">Site Title</label>
        <input type="text" name="siteTitle" placeholder="Site Title" value="<%= settings.siteTitle %>">
        <br>

        <hr>
        <h3>Header Settings</h3>
        <hr>

        <label for="headerLeftImageURL">Header Left Image URL</label>
        <input type="text" name="headerLeftImageURL" placeholder="Header Left Image URL" value="<%= settings.headerLeftImageURL %>">
        <br>

        <label for="headerTitle">Header Title</label>
        <input type="text" name="headerTitle" placeholder="Header Title" value="<%= settings.headerTitle %>">
        <br>

        <label for="headerRightImageURL">Header Right Image URL</label>
        <input type="text" name="headerRightImageURL" placeholder="Header Right Image URL" value="<%= settings.headerRightImageURL %>">
        <br>

        <hr>
        <h3>Home Settings</h3>
        <hr>
        <label for="homeLeftImageURL">Home Left Image URL</label>
        <input type="text" name="homeLeftImageURL" placeholder="Home Left Image URL" value="<%= settings.homeLeftImageURL %>">
        <br>

        <label for="homeAboutMe">Home About Me</label>
        <textarea id="homeAboutMe" name="homeAboutMe" rows="4" cols="50"><%= settings.homeAboutMe %></textarea>
        <br>

        <label for="homeAboutMeSignature">Home About Me Signature</label>
        <input type="text" name="homeAboutMeSignature" placeholder="Home About Me Signature" value="<%= settings.homeAboutMeSignature %>">
        <br>

        <label for="homeRightImageURL">Home Right Image URL</label>
        <input type="text" name="homeRightImageURL" placeholder="Home Right Image URL" value="<%= settings.homeRightImageURL %>">
        <br>

        <hr>
        <h3>Nav-Bar Settings</h3>
        <hr>

        <label for="navbarHomeButtonTitle">Nav-Bar Home Button Title</label>
        <input type="text" name="navbarHomeButtonTitle" placeholder="Home" value="<%= settings.navbarHomeButtonTitle %>">
        <br>

        <label for="navbarPostButtonTitle">Nav-Bar Post Button Title</label>
        <input type="text" name="navbarPostButtonTitle" placeholder="Post" value="<%= settings.navbarPostButtonTitle %>">
        <br>

        <label for="navbarLinksButtonTitle">Nav-Bar Links Button Title</label>
        <input type="text" name="navbarLinksButtonTitle" placeholder="Links" value="<%= settings.navbarLinksButtonTitle %>">
        <br>

        <label for="navbarDonateButtonTitle">Nav-Bar Donate Button Title</label>
        <input type="text" name="navbarDonateButtonTitle" placeholder="Donate" value="<%= settings.navbarDonateButtonTitle %>">
        <br>

        <label for="navbarAdminButtonTitle">Nav-Bar Admin Button Title</label>
        <input type="text" name="navbarAdminButtonTitle" placeholder="Admin" value="<%= settings.navbarAdminButtonTitle %>">
        <br>

        <label for="navbarTwitterURL">Nav-Bar Twitter URL</label>
        <input type="text" name="navbarTwitterURL" placeholder="Twitter URL" value="<%= settings.navbarTwitterURL %>">
        <br>

        <hr>
        <h3>Admin Settings</h3>
        <hr>

        <label for="adminPostsTitle">Admin Posts Title</label>
        <input type="text" name="adminPostsTitle" placeholder="Posts Management" value="<%= settings.adminPostsTitle %>">
        <br>

        <label for="adminLinksTitle">Admin Links Title</label>
        <input type="text" name="adminLinksTitle" placeholder="Links Management" value="<%= settings.adminLinksTitle %>">
        <br>

        <label for="adminDonationTitle">Admin Donation Title</label>
        <input type="text" name="adminDonationTitle" placeholder="Donation Management" value="<%= settings.adminDonationTitle %>">
        <br>

        <label for="adminRegisterTitle">Admin Register Title</label>
        <input type="text" name="adminRegisterTitle" placeholder="Register Admin" value="<%= settings.adminRegisterTitle %>">
        <br>

        <label for="adminSettingsTitle">Admin Settings Title</label>
        <input type="text" name="adminSettingsTitle" placeholder="Site Settings" value="<%= settings.adminSettingsTitle %>">
        <br>

        <label for="adminLogoutTitle">Admin Logout Title</label>
        <input type="text" name="adminLogoutTitle" placeholder="Logout" value="<%= settings.adminLogoutTitle %>">
        <br>

        <hr>
        <h3>Footer Settings</h3>
        <hr>

        <label for="footerCopyright">Footer Copyright</label>
        <input type="text" name="footerCopyright" placeholder="Footer Copyright" value="<%= settings.footerCopyright %>">
        <br>

        <hr>
        <button>Save All Changes</button>
    </form>
</div>

<%- include('../partials/footer') %>